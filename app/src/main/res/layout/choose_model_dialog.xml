<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Выберите модель для прогноза"
            android:id="@+id/textView9"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#b4494949" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/closeChooseModelDialog"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="#1b0000"
            android:adjustViewBounds="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BlackScholes"
            android:id="@+id/bsChosenBtn"
            android:background="@drawable/clickable_pad_button"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"></FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Merton"
            android:id="@+id/mertonChosenBtn"
            android:background="@drawable/clickable_pad_button"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"></FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rabinovitch"
            android:id="@+id/rabiChosenBtn"
            android:background="@drawable/clickable_pad_button"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/comparisonChosenBtn"
            android:layout_toStartOf="@+id/comparisonChosenBtn"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="5dp"
            android:layout_height="match_parent"></FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Сравнительный"
            android:id="@+id/comparisonChosenBtn"
            android:background="@drawable/clickable_pad_button"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/mertonChosenBtn"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>