<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Цена Call опциона"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/callOptionPrice"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#229100"
            android:textStyle="bold"
            android:text="0" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff7fdf"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Цена Put опциона"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/putOptionPrice"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="#800002"
            android:text="0"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>